<Layout title="About Us">
  <main class="flex flex-col h-full w-screen p-[1rem] relative">
    <div
      class="absolute inset-0 -z-10 bg-white bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:3rem_2rem]"
    >
      <!-- <div
        class="h-full w-full bg-[radial-gradient(circle_800px_at_100%_200px,#e8d7fa,transparent)]"
      >
      </div> -->
      <!-- pl-[2rem] -->
    </div>
    <div
      class="text-[3rem] md:text-[4rem] lg:text-[6rem] flex flex-col font-bold font-['Krona_One'] underline decoration-4 decoration-[#77e272]"
    >
      <span class="drop-shadow-4xl">ABOUT</span>
      <span class="drop-shadow-4xl">US</span>
    </div>
    <div
      class="absolute top-[4rem] right-[0rem] sm:top-[6rem] sm:right-[0rem] lg:top-[4rem] lg:right-[0rem] -z-10"
    >
